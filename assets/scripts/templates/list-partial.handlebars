<table class="table table-hover table-responsive">
  {{#if lists}}
  {{#each lists as |list|}}
    <tr data-row="{{list.id}}" {{#if list.active}}{{else}}class="hidden"{{/if}} >
      <td>
        {{list.name}}
      </td>
      <td class="hidden" data-list="item">
        How many? <input type="number" placeholder="Needed">
      </td>
      <td class="hidden" data-list="item">
        <button data-to="{{list.id}}" class="btn-sm btn btn-success">&#43;
        </button>
      </td>
      <td>
        <button data-showedit="{{list.id}}" class="btn-sm btn btn-success" title="This list" data-function="quantity">&#10004;
        </button>
      </td>
    </tr>
  {{/each}}
  {{else}}
    <tr>
      <td>
        You have no lists. <button class="btn btn-xs btn-success" data-new-list >Make a new list &raquo;</button>
      </td>
    </tr>
    {{/if}}
</table>
